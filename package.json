{
  "name": "monorepo",
  "private": true,

  "scripts": {
    "bootstrap": "pnpm install",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "dev": "concurrently -k -r -n server,web -c blue,magenta \"pnpm --filter server dev\" \"pnpm --filter web dev\"",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "simple-git-hooks": "^2.9.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && node scripts/check-deps.js"
  }
}
